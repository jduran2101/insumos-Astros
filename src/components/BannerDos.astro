---
import { slide } from "astro:transitions";
---

<section class="banner">
    <div class="img">
        <div class="circle"></div>
        <div class="texto">
            <p>¡Tú comodidad es nuestra prioridad!</p>
            <h1>Somos Tu POLIRUBRO</h1>
            <h4>
                Disfruta la oportunidad de elejir<br />
                lo que estas <span>buscando...</span>
            </h4>
            <button>ENVIOS A TODO EL PAIS</button>
        </div>
        <div class="tresd">
            <img
                transition:animate={slide({ duration: "1s" })}
                src="/img/botella3d.png"
                alt=""
            />
            <img
                transition:animate={slide({ duration: "1s" })}
                class="mochila"
                src="/img/mochila3d.png"
                alt=""
            />
        </div>
    </div>

    <div class="whatsapp">
        <a class="wha" href="" target="_black"
            ><img src="/img/whatsapp.svg" alt="whatsapp" /></a
        >
    </div>
</section>
<style>
    .banner {
        background-color: #2d2d2d;
    }
    .img .circle {
        position: absolute;
        z-index: 0;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #d70788;
        clip-path: circle(600px at right 620px);
    }
    .banner .img {
        position: relative;
        height: 500px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;

        padding-top: 10px;
    }
    .img .texto {
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        animation: scale-in-hor-center 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
            both;
    }

    @keyframes scale-in-hor-center {
        0% {
            -webkit-transform: scaleX(0);
            transform: scaleX(0);
            opacity: 1;
        }
        100% {
            -webkit-transform: scaleX(1);
            transform: scaleX(1);
            opacity: 1;
        }
    }

    .img .tresd {
        width: 50%;
        display: flex;
        flex-wrap: nowrap;
        align-items: end;
        z-index: 1;
    }
    .tresd img {
        width: 150px;
    }
    .tresd .mochila {
        width: 280px;
        height: 350px;
    }

    .img .texto p {
        margin: 0;
        color: #d70788;
        font-size: 22px;
        font-weight: 600;
    }
    .img .texto span {
        color: #d70788;
        font-weight: 600;
    }
    .img .texto h1 {
        font-size: 44px;
        color: #fff5fc;
        padding-top: 30px;
        margin: 0;
    }

    .img .texto h4 {
        margin: 0;
        font-size: 26px;
        color: #fff;
        padding-top: 20px;
        font-weight: 400;
    }
    .img .texto button {
        margin-top: 20px;
        padding: 10px 10px;
        border-radius: 20px;
        background-color: #2d2d2d;
        color: #d70788;
        font-weight: 600;
        border: 2px solid #d70788;
        animation: pulso 3.5s infinite;
    }
    @keyframes pulso {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
        100% {
            transform: translateY(0);
        }
    }






    .whatsapp {
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 999;
        transition: ease 0.3s;
    }

    .whatsapp .wha {
        text-decoration: none;
    }
    .wha img {
        width: 60px;
    }
    .whatsapp:hover {
        transform: scale(1.1);
    }
    @media (max-width:800px){
        .banner .img {
            width: 98%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }
        .img .texto {
            width: 100%;
            padding: 5px;
            text-align: center;
        }
        .img .circle {
            clip-path: circle(500px at right 800px);
        }

        .img .texto h1 {
            font-size: 30px;
        }
        .img .texto p {
            font-size: 18px;
            padding-top: 20px;
        }
        .img .texto h4 {
            font-size: 22px;
            text-align: center;
        }
        .img .tresd {
            width: 100%;
            justify-content: center;
        }
        .tresd img {
            width: 90px;
        }
        .tresd .mochila {
            width: 150px;
            height: 190px;
        }
    }
</style>
