---
import '@fontsource-variable/montserrat';

---



<div class="preHeader">
    <p>ENVÍOS A TODO EL PAÍS</p>
</div>
<header>
        <div>
            <img class="logo" src="/img/logo.png" alt="LogoJDInsumos">
        </div>
        <button class="abrir-menu" id="abrir" aria-label="name">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4 6C4 5.44772 4.44772 5 5 5H19C19.5523 5 20 5.44772 20 6C20 6.55228 19.5523 7 19 7H5C4.44772 7 4 6.55228 4 6Z" fill="currentColor" />
            <path d="M4 18C4 17.4477 4.44772 17 5 17H19C19.5523 17 20 17.4477 20 18C20 18.5523 19.5523 19 19 19H5C4.44772 19 4 18.5523 4 18Z" fill="currentColor" /><path d="M5 11C4.44772 11 4 11.4477 4 12C4 12.5523 4.44772 13 5 13H13C13.5523 13 14 12.5523 14 12C14 11.4477 13.5523 11 13 11H5Z" fill="currentColor" /></svg>
        </button>

        <nav class="nav" id="nav">
            <button class="cerrar-menu" id="cerrar" aria-label="name">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M16.3956 7.75734C16.7862 8.14786 16.7862 8.78103 16.3956 9.17155L13.4142 12.153L16.0896 14.8284C16.4802 15.2189 16.4802 15.8521 16.0896 16.2426C15.6991 16.6331 15.0659 16.6331 14.6754 16.2426L12 13.5672L9.32458 16.2426C8.93405 16.6331 8.30089 16.6331 7.91036 16.2426C7.51984 15.8521 7.51984 15.2189 7.91036 14.8284L10.5858 12.153L7.60436 9.17155C7.21383 8.78103 7.21383 8.14786 7.60436 7.75734C7.99488 7.36681 8.62805 7.36681 9.01857 7.75734L12 10.7388L14.9814 7.75734C15.372 7.36681 16.0051 7.36681 16.3956 7.75734Z" fill="currentColor" />
                <path fill-rule="evenodd" clip-rule="evenodd" d="M4 1C2.34315 1 1 2.34315 1 4V20C1 21.6569 2.34315 23 4 23H20C21.6569 23 23 21.6569 23 20V4C23 2.34315 21.6569 1 20 1H4ZM20 3H4C3.44772 3 3 3.44772 3 4V20C3 20.5523 3.44772 21 4 21H20C20.5523 21 21 20.5523 21 20V4C21 3.44772 20.5523 3 20 3Z" fill="currentColor" /></svg>
            </button>
            <a class="cursor" href="/">INFORMACIÓN</a>
            <div class="vertical"></div>
            <a class="cursor" href="">PRODUCTOS</a>
        </nav>



        <script>
            const nav = document.querySelector('#nav');
            const abrir = document.querySelector('#abrir');
            const cerrar = document.querySelector('#cerrar');

             abrir.addEventListener("click", () =>{
             nav.classList.add("visible")
             });
             cerrar.addEventListener("click", ()=>{
             nav.classList.remove("visible")
             })
        </script>
       
</header>

<style>
.preHeader {
    padding: 18px;
    height: 5px;
    background-color: #121212;
}

    
@keyframes pulso {
    0% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
    100% {
        transform: translateY(0);
    }
}

.preHeader p {
    margin: 6px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff5fc;
    font-size: 15px;
    height: 100%;
    animation: pulso 4s infinite;
}
header {
    font-family: 'Montserrat Variable', sans-serif;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #2d2d2d;
    padding: 35px;
    
}

.logo {
    width: 150px;
}

header nav {
    display: flex;
    
    width: 300px;
}

header nav .vertical {
    margin: 10px;
    width: 2px;
    height: 20px;
    background-color: #fff5fc;
}

.cursor {
    
    padding: 10px;
    
    color: #fff5f7;
    font-weight: 600;
    cursor: pointer;
    position: relative;
    border: none;
    text-decoration: none;
    transition-timing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
    transition-duration: 400ms;
    transition-property: color;
}

.cursor:focus,
.cursor:hover {
    color: #d70788;
}

.cursor:focus:after,
.cursor:hover:after {
    width: 100%;
    left: 0%;
}

.cursor:after {
    content: "";
    pointer-events: none;
    bottom: -2px;
    left: 50%;
    position: absolute;
    width: 0%;
    height: 2px;
    background-color: #d70788;
    transition-timing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
    transition-duration: 400ms;
    transition-property: width, left;
}
.abrir-menu, .cerrar-menu {
    display: none;
}
@media (max-width:800px){
    header {
        padding: 10px;
    }
    .abrir-menu, .cerrar-menu {
        display: block;
        border: 0;
        padding: 5px;
        cursor: pointer;
        background-color:#2d2d2d;
        color: #ece4e9;
    }
    .logo {
        width: 150px;
    }
    
        
        
        
    .nav {
        padding-top: 80px;
        
        flex-direction: column;
        
    
        align-items: center;
        gap: 40px;
        z-index: 100;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        background-color: #2d2d2d;
        opacity: 0;
        visibility: hidden;
        transition: 0.5s ease;
    }
    .nav .vertical {
        display: none;
    }
    .nav.visible {
        opacity: 1;
        visibility: visible;
        transition: 0.5s ease;

    }
}






</style>