---
import '@fontsource-variable/montserrat';
import Header from "../components/Header.astro"
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
	</head>
	<body>
		<div class="contenedor-principal">
			<Header />
		 <slot />
		    <Footer />
		</div>
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
		
	}
	html {
		
      font-family: 'Montserrat Variable', sans-serif;

	}
	body {
	    background: #DBE6F6;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to top, #C5796D, #DBE6F6);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to top, #C5796D, #DBE6F6); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	.contenedor-principal {
		width: 100%;
        max-width: 1285px;
        margin: 0 auto;
        height: auto;
    
	}
	h1, h2, h3, h4 {
		margin: 0;
	}
	p {
		margin: 0;
	}
</style>
